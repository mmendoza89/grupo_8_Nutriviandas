<html lang="en">
  <%- include('../partials/head.ejs',{css: 'productEdit.css'}) %>
  <body class="body-productEdit">
    <%- include('../partials/header.ejs') %>
    <main class="main-product_create">
      <div class="container">
        <section>
          <div class="createP-section">
            <h1 class="titulo-agregarP">Editar <%= producto.name %></h1>
            <form class="createP-form" action="/products/<%= producto.id %>?_method=PUT" method="POST"
            >
              <div class="createP-field">
                <label class="titulo-form" for="name">Nombre </label>
                <input
                  type="text"
                  name="name"
                  id="name"
                  value="<%= producto.name %>"
                />
              </div>
              <div class="createP-field">
                <label class="titulo-form" for="description"
                  >Descripción
                </label>
                <textarea
                  name="description"
                  id="description"
                  cols="50"
                  rows="5"
                >
                      <%= producto.description %></textarea
                >
              </div>

              <div class="createP-field">
                <label class="titulo-form" for="price">Precio </label>
                <input
                  type="text"
                  name="price"
                  id="price"
                  xpattern="^$\d{1,3}(,\d{3})*(\.\d+)?$"
                  value="<%= producto.price %>"
                  placeholder="$1.000,00"
                />
              </div>

              <div class="createP-field createP-field-categorias">
                <p class="titulo-form">Categorías</p>
                <div>
                  <div>
                    <input
                      type="checkbox"
                      name="producto_categ-1"
                      id="producto_categ-1"
                      checked
                    />
                    <label for="producto_categ-1">Carnes rojas </label>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      name="producto_categ-2"
                      id="producto_categ-2"
                    />
                    <label for="producto_categ-2">Pollo </label>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      name="producto_categ-3"
                      id="producto_categ-3"
                    />
                    <label for="producto_categ-3">Vegetariano </label>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      name="producto_categ-4"
                      id="producto_categ-4"
                    />
                    <label for="producto_categ-4">Vegano </label>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      name="producto_categ-5"
                      id="producto_categ-5"
                    />
                    <label for="producto_categ-5">Bajo en calorias </label>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      name="producto_categ-6"
                      id="producto_categ-6"
                    />
                    <label for="producto_categ-6">Postre </label>
                  </div>
                  <div>
                    <input
                      type="checkbox"
                      name="producto_categ-7"
                      id="producto_categ-7"
                    />
                    <label for="producto_categ-7">Bajo en sodio </label>
                  </div>
                </div>
              </div>


              
              <div class="createP-field">
                <label for="upload-img" class="titulo-form">Imagen del producto</label>
                <div>
                <input type="file" name="upload-img" id="upload-img" />
                <input
                  type="button"
                  class="upload-button createP-button"
                  value="CARGAR IMAGEN"
                />
                </div>
              </div>
              <div class="save-button-section">
                <button type="submit" class="save-producto_button">
                  GUARDAR PRODUCTO
                </button>
              </div>
            </form>

            <form
              class="createP-form"
              action="/productos/<%= producto.id %>/delete?_method=DELETE"
              method="POST"
              style="text-align: center"
            >
              <span>Admin only: </span>
              <button class="createP-button-danger">Delete this Product</button>
            </form>
          </div>
        </section>
      </div>
    </main>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/menuDetail.css">
  <link rel="stylesheet" href="/css/headerFooter.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <link rel="icon" href="images/logo_nutriviandas.jpeg" type="image/gif" sizes="16x16" />
  <link rel="preconnect" href="https://fonts.gstatic.com"> 
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
  <title>Nutriviandas</title>
</head>

    <body>
        <!--TOP NAV-->
        <%- include('../partials/header.ejs') %>

        <!--SECCION HEADER MENUS-->
      <section class="main-productDetail">
        <div class="img-for-mobile">
          <div class="filters-bar">
            <div class="categories">
              <% for( let i = 0; i < 6; i++ ) { %>
                <a href="/menuDetail/<%= i + 1 %>" class="category" > <%= allMenus[i].name %> </a>
              <% } %>
            </div>
          </div>
        </div>
        <div class="container">
          <div class="small-container single-product">
            <div class="row">
              <div class="col-2">
                <div class="product-route-mobile">
                  <p> <a href="/menus">Menús</a> /  <%= menus.name %> </p>
                </div>
                <img src="/images/menus/menu<%=menuId - 1 %>.jpg" width="100%" alt="productImage">
              </div>
              <div class="col-2 product-info">
                <div class="product-route-lg">
                  <p> <a href="/menus" >Menús</a> / <%= menus.name %> </p>
                </div>
                <div class="product-title">
                    <h1>Menu <%= menus.name %></h1>
                </div>
                <div class="product-price">
                    <h4>$ <%= total %></h4>
                </div>
                <div class="product-qty-btn">
                    <input type="number" value="1">
                    <a href="" class="add-button">Agregar al carrito</a>
                </div>
                <div class="product-description">
                    <h3>Descripción</h3>
                    <p><%= menus.description %></p>
                </div>
              </div>
            </div>
          </div>
          <!-- Related products section -->
          <div class="small-container">
            <div class="included-title">
              <h2>Platos Incluidos</h2>
            </div>

            <div class="row platesIncluded" id="included">
              <% for(let plate of plates) { %> 
                <%- include('../partials/plate', {plate: plate}) %> 
              <% } %> 
            </div>

          </div>
        </div>
      </section>
        


        <%- include('../partials/footer.ejs') %> 
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    </body>
</html>